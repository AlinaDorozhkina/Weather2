<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/liner_main_functions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bluedark"
    tools:context=".MainFunctionsFragment">

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/common_margin"
        android:text="@string/choose_city"
        android:fontFamily="@font/alice"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_size_average"
        app:layout_constraintHorizontal_bias="0.497">

    </TextView>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_city"
        android:layout_margin="@dimen/common_margin_small"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/textViewExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/common_margin_small"
        android:fontFamily="@font/alice"
        android:text="@string/extras"
        android:textColor="@color/yellow"
        android:textSize="@dimen/text_size_average">
    </TextView>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_small"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/air_pressure" />

        <CheckBox
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/window_speed_checkbox" />

        <CheckBox
            android:id="@+id/moisture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="@string/atmospheric_moisture" />

    </LinearLayout>

    <Button
        android:id="@+id/button_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_button"
        android:textSize="@dimen/text_size_small"
        android:layout_marginTop="@dimen/common_margin_small"
        android:textColor="@color/white"
        android:fontFamily="@font/alice"
        android:backgroundTint="@color/blues"
        >
    </Button>


</LinearLayout>