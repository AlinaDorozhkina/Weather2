<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_liner_for_weather_description"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nebokolos2"
    tools:context=".WeatherDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_margin"
            style="@style/my_average_text"
            android:gravity="end"
            android:layout_weight="1"
            android:text="@string/city">

        </TextView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/favourites_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/common_margin_small"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:onClick="addToFavourites"
            android:contentDescription="@string/addingToFavourite"
            app:icon="@drawable/ic_baseline_star_border_24"/>


    </LinearLayout>
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/my_big_text"/>

            <ImageView
                android:id="@+id/imageViewWeatherGraphic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/image"
                app:srcCompat="@drawable/sunicon"
                tools:srcCompat="@drawable/sunicon"
                tools:visibility="visible" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weather_description"
                android:gravity="center"
                style="@style/my_average_text"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/liner_for_week_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/common_margin_small"
        >


        <TextView
            android:id="@+id/textWebSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:text="@string/web_weather"
            style="@style/my_small_text"/>

        <Button
            android:id="@+id/buttonWebSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:backgroundTint="@color/blues"
            android:fontFamily="@font/alice"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/web_open_button"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_super_small" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/frame_for_extra_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView_for_week_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>