<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_favourites_city"
        android:name="com.example.weatherapp.MainFunctionsFragment"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        tools:layout="@layout/fragment_main_functions">

    </fragment>
    <fragment
        android:id="@+id/fragment_picture"
        android:name="com.example.weatherapp.PictureFragment"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        tools:layout="@layout/fragment_picture"
        >

    </fragment>

    <fragment
        android:id="@+id/fragment_for_favorites"
        android:name="com.example.weatherapp.FavouritesCityFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_favourites_city">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView_for_favourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

    </fragment>


</LinearLayout>