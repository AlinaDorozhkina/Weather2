<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/common_margin_small"
        android:layout_marginEnd="@dimen/common_margin_small"
        android:contentDescription="@string/settings">

    </ImageView>


    <fragment
        android:id="@+id/fragment_favourites_city"
        android:name="com.example.weatherapp.fragments.MainFunctionsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_small"
        tools:layout="@layout/fragment_main_functions">

    </fragment>



    <fragment
        android:id="@+id/fragment_for_favorites"
        android:name="com.example.weatherapp.fragments.FavouritesCityFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_favourites_city">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView_for_favourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

    </fragment>


</LinearLayout>