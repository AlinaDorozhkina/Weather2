<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="my_big_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alice</item>
    </style>

    <style name="my_average_text">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/text_size_average</item>
    <item name="android:textStyle">bold</item>
    <item name="android:fontFamily">@font/alice</item>

    </style>
    <style name="my_small_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alice</item>
    </style>

    <style name="my_super_small_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alice</item>
    </style>
    <style name="my_button">
        <item name="android:radius">10dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/alice</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="my_checkbox">
        <item name="fontFamily">@font/alice</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AlertDialog" parent = "Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">#CA2424</item>
         <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/text_size_super_small</item>
          <item name="android:windowBackground">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Dialog_Button</item>
        <item name="android:windowTitleStyle">@style/DialogTitle</item>

    </style>

    <style name="Dialog_Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:color">@android:color/holo_red_light</item>
    </style>


</resources>